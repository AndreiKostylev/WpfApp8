<Window x:Class="WpfApp8.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Captcha Verification" Height="200" Width="400">
    <Grid>
        <Image x:Name="CaptchaImage" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Width="200" Height="70"/>
        <TextBox x:Name="CaptchaTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="30" Margin="0,20,0,0"/>
        <Button Content="Verify" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,20,0,0" Click="VerifyButton_Click"/>
    </Grid>
</Window>
