<Window x:Class="WpfApp8.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        
        Title="OrderWindow" Height="300" Width="419">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6A82FB" Offset="0" />
            <GradientStop Color="#FFFC5C7D" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,-10,7">
        <TextBox Name="txtId" Margin="10,10,20,0" VerticalAlignment="Top" />
        <TextBox Name="txtDate" Margin="10,50,20,0" VerticalAlignment="Top" />
        <TextBox Name="txtStatus" Margin="10,90,20,0" VerticalAlignment="Top" />
        <TextBox Name="txtClientId" Margin="10,130,20,0" VerticalAlignment="Top" />
        <TextBox Name="txtTotal" Margin="10,170,20,0" VerticalAlignment="Top" />

        <Button Content="Удалить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="67,0,0,10" Width="112" Click="Delete_Click" Height="36"/>
        <Button Content="Обновить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="239,0,0,10" Width="114" Click="Update_Click" Height="36"/>

    </Grid>
</Window>
